<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="locuszoomJS">
    <description>Plot interractive Manhattan plot using locuszoom JS</description>
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>
            <test test_attr="ext" result_type="datatype">txt</test>
            <to_param param_attr="id">dataset_id</to_param>
            <to_param param_attr="dbkey">dbkey</to_param>
        </data_source>
    </data_sources>
    <params>
        <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
    </params>
    <settings>
        <input>
            <label>Add tabix file for your primary dataset</label>
            <help>Can be created with tabix</help>
            <name>tabix</name>
            <type>data</type>
        </input>
        <input>
            <label>Select a Chromosome</label>
            <name>chromosome</name>
            <type>integer</type>
            <min>1</min>
        </input>
        <input>
            <label>Select start position</label>
            <name>start</name>
            <type>integer</type>
            <min>1</min>
        </input>
        <input>
            <label>Select end position</label>
            <name>end</name>
            <type>integer</type>
            <min>1</min>
        </input>
    </settings>
    <requirements>
        <requirement type="npm" version="MY_NPM_PACKAGE_VERSION" package="MY_NPM_PACKAGE_NAME"/>
    </requirements>
    <entry_point entry_point_type="script" src="dist/index.js" css="dist/index.css" />
</visualization>